<% if (offers.length) { %>

    <h1 class="title_offers">My Offers</h1>
    <div class="grid-container">
        <% offers.forEach((offer)=> { %>
            <div class="grid-item">
                <h2 class="jobTitle">
                    <%= offer.jobTitle %>
                </h2>
                <p>
                    <%= offer.employerName %>
                </p>
                <p>
                    <%= offer.offerStatus %>
                </p>


                <a class="btn" href="/offer/<%= offer._id %>">See More</a>
            </div>
            <% }); %>
    </div>
    <% } else { %>
        <p>No offer found.</p>
        <% } %>