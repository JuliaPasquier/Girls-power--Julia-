<% if (offers.length) { %>

    <h1 class="title_offers">My Offers</h1>
 <div class="grid-container">
    <% offers.forEach((offer)=> { %>
       
            <div class="card">
                <h2 class="jobTitle">
                    <%= offer.jobTitle %>
                </h2>
                <p class="offerName">
                    <%= offer.employerName %>
                </p>
                <p class="offerStatus">
                    <%= offer.offerStatus %>
                </p>


                <a class="btn" href="/offer/<%= offer._id %>">See More</a>
            </div>
        <% }); %>
    </div> 
<% } else { %>
    <p>No offer found.</p>
<% } %>
