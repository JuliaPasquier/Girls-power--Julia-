        <label for="resume">CV</label>
        <input type="file" name="resume" id="resume" /> -->

        <label class="labelTitle" for="password">password</label>
        <input type="password" name="password" required />

        <label class="labelTitle"  for="repeatPassword"> repeat password</label>
        <input type="password" required />

        <button class="btn_Register">Register</button>

        <p class="errorRegister"><a href="/login">Login</a> if you already have an account</p>
    </form>
    

    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            console.log("Submit post");
            const firstName = form.firstName.value;
            const lastName = form.lastName.value;
            const email = form.email.value;
            const github = form.github.value;
            // const profilePicture = form.profilePicture.value;
            // const resume = form.resume.value;
            const password = form.password.value;
            // const repeatPassword = form.repeatPassword.value;


            try {
                const res = await fetch("/register", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ firstName, lastName, email, github, password }),

                });
                const data = await

                    res.json()
                if (res.status === 201) {
                    window.location.href = "/login";
                }
                else {
                    location.assign("/register");
                }
            }
            catch (err) {
                console.log(err);

            }
        })
        // form.submit();
        //form.dispatchEvent(new Event('submit'));
    </script>

