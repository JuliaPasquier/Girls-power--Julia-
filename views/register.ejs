<%- include('partials/header'); -%>

    <form method="POST">
        <h2>Register</h2>

        <label for="firstname">firstname</label>
        <input type="text" name="firstname" required />

        <label for="lastname">lastname</label>
        <input type="text" name="lastname" required />

        <label for="email">email</label>
        <input type="text" name="email" required />

        <label for="github">github</label>
        <input type="text" name="github" required />

        <label for="profilPicture">profilPicture</label>
        <input type="text" name="profilPicture" required />

        <label for="CV">CV</label>
        <input type="text" name="CV" required />

        <label for="password">password</label>
        <input type="password" name="password" required />

        <label for="repeatPassword"> repeat password</label>
        <input type="password" name="repeatPassword" required />

        <button type="submit">Register</button>
    </form>

    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            console.log("Submit post");
            const firstName = form.firstname.value;
            const lastName = form.lastname.value;
            const email = form.email.value;
            const github = form.github.value;
            const profilPicture = form.profilPicture.value;
            const resume = form.CV.value;
            const password = form.password.value;
            const repeatPassword = form.repeatPassword.value;


            try {
                const res = await fetch("/register", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ firstName, lastName, email, github, profilPicture, resume, password }),

                });
                const data = await

                    res.json()
                if (res.status === 201) {
                    window.location.href = "/login";
                }
            }
            catch (err) {
                console.log(err);

            }
        })
        // form.submit();
        form.dispatchEvent(new Event('submit'));
    </script>

