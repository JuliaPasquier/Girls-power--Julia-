    <h2 class="titleUpdate">Register</h2>
    <form class="formCreate" method="POST">


        <label class="labelTitle" for="firstname">firstname</label>
        <input type="text" name="firstName" required />

        <label class="labelTitle"  for="lastname">lastname</label>
        <input type="text" name="lastName" required />

        <label class="labelTitle"  for="email">email</label>
        <input type="text" name="email" required />

        <label class="labelTitle"  for="github">github</label>
        <input type="text" name="github" /><br>

        <!-- <label for="profilePicture">profilePicture</label>
